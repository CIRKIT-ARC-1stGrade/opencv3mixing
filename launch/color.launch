<launch>
  <arg name="camera_num" default="0" />
  <node pkg="cv_camera" type="cv_camera_node" name="camera">
    <param name="device_id" value="$(arg camera_num)" />
    <remap from="camera/image_raw" to="input_image" />
  </node>

  <node pkg="opencv3mixing" type="mask_node" name="mask_orange">
    <remap from="~image_raw" to="image" />
  </node>

  <node pkg="opencv3mixing" type="orange_col_sender" name="orange_col_sender">
    <remap from="mask_image" to="image" />
  </node>
  
  <node pkg="image_view2" type="image_view2" name="view" />

  <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="threshold_sender" />
</launch>
